{% render 'partials/head.liquid' %}
{% include 'partials/header.liquid' %} 

<main>
    <article class="top-views">
            {% if taskObject %}
                <img src="/assets/photos/rouwtaak-{{ taskObject.theme }}.svg" alt="icon for task {{ taskObject.title }}">
            {% endif %}
            <h1>Rouwstappen van de dag</h1>
            <p>3 oefeningen open vandaag</p>
    </article>

    <article >
        <p>Schrijven</p>
        {% for exercise in exercises %}
            {% if taskObject.exercise contains exercise.id %}
                <ul class="rouwtaak-card"><li>
                    <a href="/het-verlies-aanvaarden"><img src="https://fdnd-agency.directus.app/assets/{{ exercise.image }}" class="{{ exercise.title }} img">
                    <p>{{ exercise.title }}</p>
                </li>
                <img src="/assets/icons/community-drops-color.svg" alt="community-drops icon">
                <p>47 community drops</p>
                <li class="inline">     
                    <img src="/assets/icons/time.svg" alt="time icon">
                    <P>25 min</P>
                </li>
                <li class="inline">     
                    <img src="/assets/icons/time.svg" alt="tips icon">
                    <P>3 tips</P>
                </li>    </ul>
            {% endif %}
        {% endfor %}
    </article>
</main>

{% render 'partials/footer.liquid' %}
{% render 'partials/foot.liquid' %}
